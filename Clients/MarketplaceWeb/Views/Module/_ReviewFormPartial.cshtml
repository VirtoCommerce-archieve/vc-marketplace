@model string

<div class="overlay" style="display:none;" id="reviewForm">
	<div class="overlay-cnt">
		<div class="popup">
			<a class="popup-close"></a>
			<div class="popup-head">YOUR REVIEW</div>
			<form class="popup-cnt" data-id="reviewForm" action="@SiteUrlHelper.ResolveServerUrl("~/mail/send")" method="post">
				<input type="hidden" value="Review app store" name="subject" />
				<input type="hidden" value="@Model" name="productCode" />
				<input type="hidden" value="@SiteUrlHelper.ResolveServerUrl("~/modules/" + Model)" name="redirectUrl" />
				<input type="hidden" value="0" name="rating" />
				<div class="popup-rating">
					<div class="rating-t">Please select rating</div>
					<ul id="rating" class="list __inline __rating">
						<li class="list-item" data-id="__bad" data-value="1" data-choosen="false"></li>
						<li class="list-item" data-id="__not-bad" data-value="2" data-choosen="false"></li>
						<li class="list-item" data-id="__normal" data-value="3" data-choosen="false"></li>
						<li class="list-item" data-id="__good" data-value="4" data-choosen="false"></li>
						<li class="list-item" data-id="__nice" data-value="5" data-choosen="false"></li>
					</ul>

					<div class="rating-eval" id="__bad" style="display:none;">Bad</div>
					<div class="rating-eval" id="__not-bad" style="display:none;">Not bad</div>
					<div class="rating-eval" id="__normal" style="display:none;">Normal</div>
					<div class="rating-eval" id="__good" style="display:none;">Good</div>
					<div class="rating-eval" id="__nice" style="display:none;">Nice</div>
				</div>

				<div class="form-group">
					<label class="form-label">Your e-mail</label>
					<div class="form-input">
						<input type="text" name="to" />
					</div>
				</div>

				<div class="form-group">
					<label class="form-label">Your fullname</label>
					<div class="form-input">
						<input type="text" name="fullname" />
					</div>
				</div>

				<div class="form-group">
					<label class="form-label">Your review text</label>
					<div class="form-input">
						<textarea rows="10" cols="30" id="" name="reviewMessage"></textarea>
					</div>
				</div>
			</form>
			<div class="popup-footer">
				<a class="btn __yellow __mini __round __ucase" data-id="submitPopup" data-formId="review">Submit</a>
				<a class="btn __cancel __mini __round __ucase" data-id="closePopup">Cancel</a>
			</div>
		</div>
	</div>
</div>