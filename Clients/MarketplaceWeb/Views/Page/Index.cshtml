@model MarketplaceWeb.Models.ModulesModel

<article role="main" class="main">
	<div class="items __responsive">
		<div class="title-w">
			<h2 class="t">New Extensions</h2>
			<ul class="menu __inline __right">
				<li class="menu-item">
					<a class="menu-link" href="@SiteUrlHelper.ResolveServerUrl("~/search/term?q=")">View all</a>
				</li>
			</ul>
		</div>
		<div class="list __items __inline">
			@Html.Partial("MainModules", Model)
		</div>
	</div>
	<div class="info-w">
		<div class="info __responsive">
			<div class="info-ico"></div>
			<div class="info-descr">
				If you want sell your module on our marketplace become a developer.
			</div>
			<a class="btn __large __round __red __ucase" data-id="becomeDeveloperFormButton">Become a developer</a>
		</div>
	</div>
</article>

@section forms {
	@Html.Partial("_BecomeDeveloperFormPartial")
}
