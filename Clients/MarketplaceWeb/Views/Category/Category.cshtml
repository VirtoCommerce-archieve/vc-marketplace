@model CategoryResults

<article role="main" class="main">
	<div class="breadcrumbs __responsive">
		<ul class="menu __inline">
			<li class="menu-item">
				<a class="menu-link" href="@SiteUrlHelper.ResolveServerUrl("~")">HOME</a>
			</li>
			<li class="menu-item">
				@Model.CategoryName
			</li>
		</ul>
	</div>
	<div class="items __responsive">
		<div class="title-w">
			<h2 class="t">@Model.CategoryName</h2>
			<ul class="menu __inline __right">
				<li class="menu-item">
					<a class="menu-link" href="@SiteUrlHelper.ResolveServerUrl("~/" + Model.CategoryCode)">Sort by price</a>
				</li>
			</ul>
		</div>
		<div class="list __items __inline">
			<ul class="main">
				@foreach (var item in Model.Modules)
				{
					<li class="list-item">
						@Html.Partial("ShortModuleInfo", item)
					</li>
				}
			</ul>
		</div>
	</div>
</article>
