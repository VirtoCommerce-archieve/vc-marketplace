@model Vendor

<article role="main" class="main">
	<div class="profile __responsive">
		<div class="col-w">
			<div class="col __col-70">
				<div class="title-w">
					<h2 class="t">@Model.Name</h2>
					<ul class="menu __inline __right">
						<li class="menu-item">
							<a class="menu-link" style="cursor:pointer;" data-id="contactVendorFormButton">Contact</a>
						</li>
						<li class="menu-item">
							<a class="menu-link" style="cursor:pointer;" data-id="supportVendorFormButton">Support</a>
						</li>
					</ul>
				</div>
				<div class="profile-descr">
					@Html.Raw(Model.FullDescription)
				</div>
			</div>
			<div class="extension-links col __col-30">
				<div class="extension-canvas __right">
					<img src="@Model.Icon" alt="" class="extension-img">
				</div>
			</div>
		</div>
		@if (Model.Modules.Count > 0)
		{
			<div class="profile-extensions">
				<div class="sub-t">Extensions by this developer (@Model.Modules.Count)</div>
				<div class="list __items __inline">
					<ul class="profile">
						@foreach(var item in Model.Modules)
						{
							<li class="list-item">
								@Html.Partial("ShortModuleInfo", item)
							</li>
						}
					</ul>
				</div>
			</div>
		}
	</div>
</article>

@section forms {
	@Html.Partial("_ContactVendorFormPartial", Model)
	@Html.Partial("_SupportVendorFormPartial", Model)
}
