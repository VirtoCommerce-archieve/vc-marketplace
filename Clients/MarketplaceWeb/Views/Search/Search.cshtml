@model SearchResult

<article role="main" class="main">
	<div class="items __responsive">
		<div class="title-w">
			<h2 class="t">Search result for @Model.SearchTerm</h2>
			<ul class="menu __inline __right">
				<li class="menu-item">
					<a class="menu-link" href="@SiteUrlHelper.ResolveServerUrl("~/search/term?q=" + Model.SearchTerm)">Sort by price</a>
				</li>
			</ul>
		</div>
		<div class="list __items __inline">
			<ul class="main">
				@foreach (var item in Model.Results)
				{
					<li class="list-item">
						@Html.Partial("ShortModuleInfo", item)
					</li>
				}
			</ul>
		</div>
	</div>
</article>